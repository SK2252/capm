{
  "name": "ccep-sustainability-capm",
  "version": "1.0.0",
  "description": "CCEP Sustainability Analytics with SAP CAP, Agentic RAG, and Gen AI",
  "main": "server.js",
  "scripts": {
    "start": "cds-serve",
    "dev": "cds watch --with-mocks",
    "watch": "cds watch",
    "build": "cds build",
    "build:prod": "cds build --production",
    "start:prod": "NODE_ENV=production cds-serve",
    "test": "jest --timeout=10000",
    "test:unit": "jest test/unit/ --timeout=5000",
    "test:integration": "jest test/integration/ --timeout=15000",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ai": "jest test/unit/agentic-rag.test.js test/unit/gen-ai-service.test.js --timeout=15000",
    "deploy": "cds deploy",
    "deploy:cf": "cf push",
    "setup": "npm run deploy && npm run seed",
    "seed": "cds run --with-mocks --in-memory",
    "seed:prod": "node scripts/seed-production-data.js",
    "lint": "eslint srv/ app/ --ext .js",
    "lint:fix": "eslint srv/ app/ --ext .js --fix",
    "format": "prettier --write srv/**/*.js app/**/*.js",
    "validate": "npm run lint && npm run test",
    "audit": "npm audit --audit-level moderate",
    "clean": "rm -rf node_modules coverage logs dist",
    "reset": "npm run clean && npm install && npm run setup"
  },
  "keywords": [
    "SAP CAP",
    "Sustainability",
    "CCEP",
    "Agentic RAG",
    "Gen AI",
    "OpenAI",
    "Analytics"
  ],
  "author": "CCEP Sustainability Team",
  "license": "MIT",
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.12.0",
    "@sap/cds": "^8.0.0",
    "@cap-js/sqlite": "^1.7.3",
    "@sap/xssec": "^4.0.0",
    "axios": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mammoth": "^1.8.0",
    "moment": "^2.30.0",
    "multer": "^2.0.0-rc.2",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdf-parse": "^1.1.1",
    "rate-limiter-flexible": "^5.0.3",
    "simple-statistics": "^7.8.3",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.7",
    "uuid": "^10.0.0",
    "winston": "^3.14.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@sap/cds-dk": "^8.0.0",
    "@sap/ux-specification": "^1.120.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.0",
    "supertest": "^7.0.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "better-sqlite",
        "credentials": {
          "url": "db/sustainability.db"
        }
      },
      "auth": {
        "kind": "dummy"
      }
    },
    "features": {
      "preserve_computed": true
    },
    "odata": {
      "version": "v4"
    }
  },
  "sapux": [
    "app/sustainability-dashboard"
  ]
}
