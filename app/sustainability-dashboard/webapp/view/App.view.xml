<mvc:View
    controllerName="ccep.sustainability.dashboard.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="mainPage" title="CCEP Sustainability Analytics" showNavButton="false">
                    <customHeader>
                        <Bar id="headerBar">
                            <contentLeft>
                                <Title id="appTitle" text="CCEP Sustainability Analytics"/>
                            </contentLeft>
                            <contentRight>
                                <Button
                                    id="dashboardBtn"
                                    text="Dashboard"
                                    icon="sap-icon://business-objects-experience"
                                    press="onNavToDashboard"
                                    type="Transparent"/>
                                <Button
                                    id="analyticsBtn"
                                    text="Analytics"
                                    icon="sap-icon://pie-chart"
                                    press="onNavToAnalytics"
                                    type="Transparent"/>
                                <Button
                                    id="chatBtn"
                                    text="AI Chat"
                                    icon="sap-icon://robot"
                                    press="onNavToChat"
                                    type="Transparent"/>
                                <Button
                                    id="mlBtn"
                                    text="ML Analytics"
                                    icon="sap-icon://learning-assistant"
                                    press="onNavToML"
                                    type="Transparent"/>
                            </contentRight>
                        </Bar>
                    </customHeader>
                    <content>
                        <!-- Default Dashboard Content -->
                        <VBox class="sapUiMediumMargin">
                            <Title text="Welcome to CCEP Sustainability Analytics" level="H2" class="sapUiMediumMarginBottom"/>

                            <!-- KPI Cards -->
                            <HBox class="sapUiMediumMarginBottom">
                                <VBox class="sapUiMediumMarginEnd">
                                    <Title text="GHG Reduction" level="H4"/>
                                    <Text text="25.3%" class="sapUiLargeText"/>
                                    <Text text="Target: 30%" class="sapUiSmallText"/>
                                </VBox>
                                <VBox class="sapUiMediumMarginEnd">
                                    <Title text="Recyclable Packaging" level="H4"/>
                                    <Text text="87.5%" class="sapUiLargeText"/>
                                    <Text text="Target: 100%" class="sapUiSmallText"/>
                                </VBox>
                                <VBox class="sapUiMediumMarginEnd">
                                    <Title text="Recycled Content" level="H4"/>
                                    <Text text="42.1%" class="sapUiLargeText"/>
                                    <Text text="Target: 50%" class="sapUiSmallText"/>
                                </VBox>
                            </HBox>

                            <!-- Quick Actions -->
                            <Title text="Quick Actions" level="H3" class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                            <HBox>
                                <Button text="Generate Report" icon="sap-icon://document" press="onGenerateReport" type="Emphasized" class="sapUiTinyMarginEnd"/>
                                <Button text="View Analytics" icon="sap-icon://pie-chart" press="onNavToAnalytics" type="Default" class="sapUiTinyMarginEnd"/>
                                <Button text="AI Chat" icon="sap-icon://robot" press="onNavToChat" type="Default" class="sapUiTinyMarginEnd"/>
                                <Button text="ML Analysis" icon="sap-icon://learning-assistant" press="onNavToML" type="Default"/>
                            </HBox>

                            <!-- Status Information -->
                            <Panel headerText="System Status" class="sapUiMediumMarginTop" expandable="true" expanded="true">
                                <content>
                                    <VBox class="sapUiSmallMargin">
                                        <HBox alignItems="Center" class="sapUiSmallMarginBottom">
                                            <Icon src="sap-icon://status-positive" color="green" size="1rem" class="sapUiTinyMarginEnd"/>
                                            <Text text="ML Service: Healthy"/>
                                        </HBox>
                                        <HBox alignItems="Center" class="sapUiSmallMarginBottom">
                                            <Icon src="sap-icon://status-positive" color="green" size="1rem" class="sapUiTinyMarginEnd"/>
                                            <Text text="Model: Gemini 1.5 Flash"/>
                                        </HBox>
                                        <HBox alignItems="Center">
                                            <Icon src="sap-icon://status-positive" color="green" size="1rem" class="sapUiTinyMarginEnd"/>
                                            <Text text="Database: Connected"/>
                                        </HBox>
                                    </VBox>
                                </content>
                            </Panel>
                        </VBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>
